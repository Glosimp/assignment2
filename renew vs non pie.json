{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":400,
    "height":300,
    "title": "Renewable vs Non-Renewable Energy",
    "description": "Renewable vs Non-Renewable",
    "data": {
      "url": "https://raw.githubusercontent.com/Glosimp/assignment2/main/PIE%20O%20OWEN%201.csv"
    },
    "params":[
      {   "name": "slide",
          "value": 2010,
          "bind": {
            "input": "range",
            "min": 2010,
            "max": 2020,
            "step": 1,
            "name": "Year: "
            }},
      {
        "name": "State_select",
        "bind": {
          "input": "select",
          "options":[
            "New South Wales",
            "Victoria",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Northern Territory"
          ],
          "labels": [
            "New South Wales",
            "Victoria",
            "Queensland",
            "Western Australia",
            "South Australia",
            "Tasmania",
            "Northern Territory" 
          ],
          "name": "Name of State: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Year == slide"},
      {"filter": "datum.State == State_select"}
    ],
    "encoding":
      {"theta": {"field": "PJ", "type": "quantitative", "stack": true},
      "color": {"field": "Type", "type": "nominal", "legend": null}
    },
    "layer": [{
      "mark": {"type": "arc", "radius": 125}
    }, 
    {
      "mark": {"type": "text", "radius": 160},
      "encoding": {
        "text": {"field": "Type", "type": "nominal"}
      }
    }]
  }